{
	"name": "@product-stock/server",
	"version": "1.0.0",
	"private": true,
	"description": "Backend for React app that runs a Node + Fastify + Drizzle + PostgreSQL server",
	"keywords": [
		"server",
		"backend",
		"node",
		"fastify",
		"drizzle",
		"postgresql",
		"docker",
		"zod"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/abnerjs/product-stock.git"
	},
	"license": "ISC",
	"author": "abnerjs",
	"type": "commonjs",
	"main": "index.ts",
	"scripts": {
		"dev": "tsx watch --env-file=.env src/api/server.ts",
		"build": "tsc --outDir dist",
		"start": "node dist/api/server.js",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:push": "drizzle-kit push",
		"db:seed": "tsx --env-file .env src/db/seed.ts",
		"db:drizzle": "drizzle-kit generate && drizzle-kit migrate",
		"db:studio": "drizzle-kit studio"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.14",
		"@types/node": "^25.2.0",
		"@types/pg": "^8.16.0",
		"drizzle-kit": "^0.31.8",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@fastify/cors": "^11.2.0",
		"@fastify/swagger": "^9.6.1",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.1",
		"drizzle-zod": "^0.8.3",
		"fastify": "^5.7.4",
		"fastify-type-provider-zod": "^6.1.0",
		"pg": "^8.18.0",
		"postgres": "^3.4.8",
		"uuidv7": "^1.1.0",
		"zod": "^4.3.6"
	}
}
