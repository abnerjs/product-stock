{
  "name": "product-stock",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for product stock management application",
  "workspaces": [
    "web",
    "server"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=web",
    "dev:server": "npm run dev --workspace=server",
    "dev:web": "npm run dev --workspace=web",
    "build": "npm run build --workspace=web",
    "build:server": "npm run build --workspace=server",
    "build:web": "npm run build --workspace=web",
    "test": "npm run test --workspaces --if-present",
    "test:server": "npm run test --workspace=server",
    "test:web": "npm run test --workspace=web",
    "lint": "npm run lint --workspaces --if-present",
    "format": "npm run format --workspaces --if-present"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/abnerjs/product-stock.git"
  },
  "author": "abnerjs",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  }
}
